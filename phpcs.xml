<?xml version="1.0"?>
<ruleset name="Drupal">
  <description>Drupal coding standard</description>

  <file>.</file>

  <rule ref="Drupal">
    <!-- These are covered by phpstan. -->
    <exclude name="Drupal.Commenting.FunctionComment.IncorrectParamVarName" />
    <exclude name="Drupal.Commenting.FunctionComment.InvalidReturn" />
    <exclude name="Drupal.Commenting.HookComment.HookReturnDoc" />
    <exclude name="Drupal.Commenting.HookComment.HookParamDoc" />
  </rule>
  <rule ref="DrupalPractice" />

  <arg name="extensions" value="php,inc,module,install,test,profile,theme,css,js,info.yml,services.yml,routing.yml" />
  <arg name="ignore" value="vendor/,node_modules/" />
  <arg value="sp"/>

</ruleset>
